<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-ionic-smisdk-plugin" version="1.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SmiSdkPluginCordova</name>

    <js-module name="SmiSdkPluginCordova" src="www/SmiSdkPluginCordova.js">
        <clobbers target="cordova.plugins.SmiSdkPluginCordova" />
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SmiSdkPluginCordova">
                <param name="android-package" value="com.datami.SmiSdkPluginCordova" />
            </feature>
        </config-file>


        <config-file target="app/src/main/AndroidManifest.xml" parent="./application">
          <service android:name="com.datami.smi.SmiIntentService" />
        </config-file>

        <config-file target="app/src/main/AndroidManifest.xml" parent="./application">
          <uses-library android:name="org.apache.http.legacy" android:required="false" />
        </config-file>


        <config-file target="app/src/main/AndroidManifest.xml" parent="/manifest">
          <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </config-file>

        <config-file target="app/src/main/AndroidManifest.xml" parent="/manifest">
          <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
        </config-file>

        <source-file src="src/android/SmiSdkPluginCordova.java" target-dir="src/com/datami" />
        <source-file src="src/android/DatamiInit.java" target-dir="src/com/datami" />
        <source-file src="src/android/DatamiApplication.java" target-dir="src/com/datami" />
        <framework src="src/android/libSmiSdk.gradle" custom="true" type="gradleReference" />
        
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="DatamiCordovaPlugin">
                <param name="ios-package" value="DatamiCordovaPlugin"/>
                <param name="onload" value="true" />
            </feature>
            <feature name="SmiSdkPluginCordova">
                <param name="ios-package" value="SmiSdkPluginCordova"/>
            </feature>
        </config-file>
        
        <source-file src="src/ios/AppDelegate+datami.m" />
        <source-file src="src/ios/SmiSdkPluginCordova.m" />
        <source-file src="src/ios/DatamiCordovaPlugin.m" />

        <header-file src="src/ios/DatamiCordovaPlugin.h" />
        <header-file src="src/ios/SmiSdkPluginCordova.h" />
        <header-file src="src/ios/AppDelegate+datami.h" />


        <framework src="SystemConfiguration.framework" />
        <framework src="CoreTelephony.framework" />
        <framework src="NetworkExtension.framework" />
                

        <header-file src="libs/ios/SmiSdk.h"/>
        <header-file src="libs/ios/SmiAnalytics.h"/>
        <source-file src="libs/ios/libsmisdk.a" framework="true"/>

        <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
            <dict>
              <key>NSExceptionDomains</key>
              <dict>
                  <key>cloudmi.datami.com</key>
                  <dict>
                      <key>NSIncludesSubdomains</key>
                      <true/>
                      <key>NSTemporaryExceptionAllowsInsecureHTTPLoads</key>
                      <true/>
                      <key>NSTemporaryExceptionMinimumTLSVersion</key>
                      <string>TLSv1.1</string>
                  </dict>
              </dict>
            </dict>
        </config-file>
    </platform>    

</plugin>